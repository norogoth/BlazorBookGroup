        <MudNavLink Href="/home">Home</MudNavLink>
        <MudNavLink Href="/login">Log In</MudNavLink>
        <MudNavLink Href="/counter" Disabled="true">Counter</MudNavLink>
        <MudNavLink Href="/fetchdata">Demo Data</MudNavLink>        
        <MudNavLink Href="/postlist">Post List</MudNavLink>
