<h3>SignUpModal</h3>

<div class="modal fade center" data-dismiss="modal" tabindex="-1" role="dialog" id="signup-modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-main-content">
                <h3 class="modal-title">Sign up for BookGroup</h3>
                <div class="form-group">
                    <label for="inputUsername">Email</label>
                    <input name="email" class="form-control" id="inputUsername">
                </div>
                 <div class="form-group">
                    <label for="inputUsername">Username</label>
                    <input name="username" class="form-control" id="inputUsername">
                </div>
                <div class="form-group">
                    <label for="inputPassword" + titleCaseName>Password</label>
                    <input name="password" class="form-control" id="inputPassword">
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary">Submit</button>
                <button class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>

</div>

